        }
    }

    private void Add(Match m)
    {
        GetArenas();

        Arenas.FirstOrDefault(a => a.Id == m.Arena.Id).Game = m;
        if (activeArena.Id == m.Arena.Id)
        {
            activeArena.Game = m;
        ctf.updateHandler -= Update;

            ctf = m.BaseGame ?? _game.GetGame(m.GameTypeName, activeArena);
        ctf.updateHandler += Update;

            _timer = ctf.GetTimer();
        }
        InvokeAsync(() =>
        {


            StateHasChanged();
        });

    }

    private void Delete(Arena a)
    {
        InvokeAsync(() =>
        {
            Arenas.RemoveAll(arena => a.Id == arena.Id);

            StateHasChanged();
        });
    }

    private void StopMatch()
    {
        _started = false;

        _timer.StopTimer();
    }

    private void ResetMatch()
    {
        _started = false;
        _timer.ResetTimer();
        ctf.ResetGame();
    }

    private void Settings()
    {
        settings = true;
    }

