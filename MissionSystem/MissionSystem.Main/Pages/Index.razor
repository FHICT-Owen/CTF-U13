    }

    private async Task CreateMatch(Match match)
    {
        Console.WriteLine("test");
        await _match.DeleteMatchAsync(activeArena.Game);
        await _match.CreateMatchAsync(match);
        settings = false;
        int arenaId = match.Arena.Id;

        Arenas = await _arena.GetArenasAsync();
        activeArena = Arenas.First(a => a.Id == arenaId);
        InvokeAsync(StateHasChanged);
    }

    private void Add(Arena a)
    {
        InvokeAsync(() =>
        {
            Arenas.Add(a);
            StateHasChanged();
        });

        foreach (Arena arena in Arenas)
